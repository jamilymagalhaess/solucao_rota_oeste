CREATE TABLE LOGIN (
    IDLogin INT PRIMARY KEY IDENTITY(1,1),
    Username NVARCHAR(255),
    Password NVARCHAR(255)
);

CREATE TABLE DIAGNOSTICTROUBLECODEALERTDEFINITION (
    IDDiagnosticTroubleCodeAlertDefinition INT PRIMARY KEY IDENTITY(1,1),
    SuspectParameterName NVARCHAR(255),
    FailureModeIndicator NVARCHAR(10),
    SourceAddress NVARCHAR(10),
    ThreeLetterAcronym NVARCHAR(10),
    Description NVARCHAR(MAX)
);

CREATE TABLE MACHINE (
    IdMachine INT PRIMARY KEY IDENTITY(1,1),
    IDLogin INT,
    FOREIGN KEY (IDLogin) REFERENCES LOGIN(IDLogin)
);
